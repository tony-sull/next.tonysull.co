---
import Layout from '../../layouts/Base.astro'
import { getCollection } from 'astro:content'

const entries = await getCollection('replies')
---

<Layout title="Replies">
    <h1>Replies</h1>
    <ul>
        {entries.map((entry) => (
            <li>
                <a href={`/replies/${entry.slug}/`}>{entry.slug}</a>
            </li>
        ))}
    </ul>
</Layout>